{
	"root": true,
	"env": {
		"browser": true,
		"es2022": true
	},
	"extends": ["@w0s/eslint-config"],
	"ignorePatterns": ["dist/*.js"],
	"parserOptions": {
		"sourceType": "script"
	},
	"overrides": [
		{
			"files": ["src/*.user.ts"],
			"rules": {
				"no-console": "off",
				"strict": ["error", "function"]
			}
		}
	]
}
